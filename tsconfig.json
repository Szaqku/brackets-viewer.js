{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "types": [
            "brackets-model"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src"]
}
